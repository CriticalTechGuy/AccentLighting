class BlueSparkle(BaseStringAnim):
    def __init__(self, *args, something=None, another=12, **kwds):
        super().__init__(*args, **kwds)
        self._colors = [colors.Blue]

    def step(self, amt=1):
       for i in range(self._led.numLEDs):
            currentcolor = self._colors[amt+=i] 
            self._led.set(i, currentcolor)
       
